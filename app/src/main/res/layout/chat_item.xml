<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/chat_user_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/instagram_logo" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_chat_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nombre Usuario Chat"
        android:layout_toRightOf="@+id/chat_user_image"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/chat_chat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Chat"
        android:layout_below="@+id/user_chat_button"
        android:layout_toRightOf="@+id/chat_user_image"/>

</RelativeLayout>