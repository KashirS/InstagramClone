<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imagen_usuario_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/nombre_usuario_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="left"
            android:textSize="20sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:backgroundTint="@color/colorAccent"
            android:hint="NombreUsuario"/>
        <ImageButton
            android:id="@+id/opciones_publicacion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:backgroundTint="@color/colorAccent"
            app:srcCompat="@android:drawable/ic_dialog_dialer" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imagen_publicacion"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/like_publicacion_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:backgroundTint="@color/colorAccent"
            app:srcCompat="@android:drawable/star_big_off"/>
        <ImageButton
            android:id="@+id/comentarios_publicacion_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:backgroundTint="@color/colorAccent"
            app:srcCompat="@android:drawable/sym_action_chat" />
        <ImageButton
            android:id="@+id/compartir_publicacion_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:backgroundTint="@color/colorAccent"
            app:srcCompat="@android:drawable/ic_menu_send" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num_likes_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Le ha gustado mucho"
            android:textSize="16dp"
            android:textStyle="bold"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:backgroundTint="@color/colorAccent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/nombre_usuario_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="NombreUsuario"
            android:textSize="15dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:backgroundTint="@color/colorAccent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/texto_usuario_textView"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:gravity="left"
            android:hint="Texto Usuario"
            android:textSize="15dp" />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/comentarios_publicacion_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ver los comentarios"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textSize="15sp"
        android:backgroundTint="@color/colorAccent"/>
</LinearLayout>